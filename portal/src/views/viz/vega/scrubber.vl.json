{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Vega-Lite spec for FieldKit scrubber.",
  "width": "container",
  "height": 50,
  "encoding": {
    "x": {
      "field": "time",
      "type": "temporal",
      "axis": {
        "ticks": false,
        "labels": false,
        "formatType": "time",
        "format": "%Y-%m-%d"
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "title": "",
        "ticks": false,
        "labels": false
      }
    }
  },
  "layer": [
    {
      "params": [
        {
          "name": "brush",
          "select": {
            "type": "interval",
            "encodings": [
              "x"
            ]
          }
        }
      ],
      "mark": {
        "type": "area",
        "color": "#DCDEDF"
      }
    },
    {
      "transform": [
        {
          "filter": {
            "param": "brush"
          }
        }
      ],
      "mark": {
        "type": "area",
        "color": "#52b5e4"
      }
    },
    {
      "mark": {
        "type": "image",
        "width": 30,
        "height": 30
      },
      "encoding": {
        "x": {
          "field": "time",
          "type": "temporal"
        },
        "y": {
          "field": "value",
          "type": "quantitative"
        },
        "url": {
          "field": "img",
          "type": "nominal"
        }
      }
    }
  ],
  "resolve": {
    "axis": {
      "x": "shared",
      "y": "shared"
    }
  }
}
