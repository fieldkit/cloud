{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Vega-Lite spec for FieldKit histograms.",
  "width": "container",
  "encoding": {
    "x": {
      "bin": { "maxbins": 20 },
      "field": "value",
      "axis": {},
      "title": "Battery charge (%)"
    },
    "y": { "aggregate": "count" },
    "color": {
      "bin": { "maxbins": 20 },
      "field": "value",
      "scale": { "scheme": "inferno", "reverse": false },
      "legend": null
    },
    "tooltip": [
      { "aggregate": "count" },
      { "field": "value", "bin": { "maxbins": 20 }, "title": "Range" }
    ]
  },
  "layer": [
    {
      "layer": [
        {
          "mark": {
            "type": "bar",
            "strokeWidth": 2
          }
        }
      ]
    }
  ]
}
